    </div>
    <div class="form-group">
        <label asp-for="sec">Seconds:</label>
        <input class="form-control" asp-for="sec" />
        <span asp-validation-for="sec"></span>
    </div>
    <div class="form-group">
        <label asp-for="hund">Hundredths:</label>
        <input class="form-control" asp-for="hund" />
        <span asp-validation-for="hund"></span>
    </div>

    <input type="submit" value="Add Race" />

