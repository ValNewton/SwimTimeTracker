    <input type="hidden" name="SwimmerID" value="@Model.Swimmer" />

    <div class="form-group">
        <label asp-for="year">Years:</label>
        <input class="form-control" asp-for="year" />
        <span asp-validation-for="year"></span>
    </div>
    <div class="form-group">
        <label asp-for="mth">Month:</label>
        <input class="form-control" asp-for="mth" />
        <span asp-validation-for="mth"></span>
    </div>
    <div class="form-group">
        <label asp-for="day">Day:</label>
        <input class="form-control" asp-for="day" />
        <span asp-validation-for="day"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="EventID"></label>
        <select asp-for="EventID" asp-items="Model.Events"></select>
        <span asp-validation-for="EventID"></span>
    </div>

    <br/>

    <div class="form-group">
        <label asp-for="min">Minutes:</label>
        <input class="form-control" asp-for="min" />
